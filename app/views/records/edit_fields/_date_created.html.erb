<script type="text/javascript">
$(document).ready(function(){
  $('.datepicker').datepicker({ format: 'yyyy/mm/dd'});
  });
</script>

<% if f.object.class.multiple? key %>
  <%= f.input key, input_html: { :style=> 'width: 100px', class: 'datepicker' }, required: f.object.required?(key) %>
<% else %>
  <%= f.input key, required: f.object.required?(key), input_html: { class: 'form-control' } %>
<% end %>

