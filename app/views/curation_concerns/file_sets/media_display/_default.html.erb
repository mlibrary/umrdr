<% if Sufia.config.display_media_download_link %>
    <%= link_to main_app.download_path(file_set), target: "_new", title: "Download the document" do %>
        <figure>
            <%= image_tag "default.png", alt: "No preview available", class: "img-responsive generic-icon" %>
            <figcaption>Download the document</figcaption>
        </figure>
    <% end %>
<% else %>
   <figure>
     <%= image_tag "default.png", alt: "No preview available", class: "img-responsive generic-icon" %>
   </figure>
<% end %>