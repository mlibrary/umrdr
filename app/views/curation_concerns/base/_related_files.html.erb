<% if presenter.file_presenters.present? %>
<div class="panel panel-default related_files">
  <div class="panel-heading">
    <h2>Files</h2>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>File</th>
        <th>Filename</th>
        <th>Date Uploaded</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render presenter.file_presenters %>
    </tbody>
  </table>
</div>
<% elsif can? :edit, presenter.id %>
<div class="panel panel-default related_files">
  <div class="panel-heading">
    <h2>Files</h2>
  </div>
  <div class="alert alert-block alert-warning">
    <p class="center">This <%= presenter.human_readable_type %> has no files associated with it. You can add one using the "Attach Files" buttons below.</p>
  </div>
</div>
<% end %>
